Screen {
    padding: 1;
}

Grid {
    grid-size: 4 5;
    grid-gutter: 1 2;
}

#display {
    width: 100%;
    height: 5;
    background: $primary-lighten-2;
    text-align: right;
    content-align-vertical: middle;
    margin-bottom: 1;
}

Button {
    width: 100%;
    height: 100%;

    &#number-0 {
        column-span: 2;
    }

    &.top {
        background: $panel-darken-2;
    }
}
