Screen {
    padding: 1;
}

#display {
    min-height: 5;
    width: 100%;
    background: $primary-lighten-2;
    content-align: right middle;
    text-align: right;
    padding: 0 1;
}

#buttons {
    grid-size: 4 5;
    grid-gutter: 1 2;
    margin-top: 1;

    & > Button {
        width: 100%;
        height: 100%;
    }

    & > #number-0 {
        column-span: 2;
    }

    & > .number {
        background: $panel-lighten-2;
    }
}
